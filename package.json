{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "bun scripts/prefetch.js && bun db:init && bun db:import",
    "dev": "bun --bun next dev --turbopack",
    "build": "bun --bun next build --turbopack && next-image-export-optimizer",
    "start": "bun --bun next start",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check .",
    "fix": "biome check . --write",
    "db:init": "bun scripts/db/init.ts",
    "db:import": "bun scripts/db/import.ts",
    "db:reimport": "FORCE_DB_IMPORT=true bun scripts/db/import.ts",
    "db:reset": "FORCE_DB_IMPORT=true bun run prebuild"
  },
  "dependencies": {
    "@publicplan/kern-react-kit": "^1.0.1",
    "@react-three/drei": "^10.7.7",
    "@tanstack/react-query": "^5.90.20",
    "@trpc/client": "^11.9.0",
    "@trpc/server": "^11.9.0",
    "@trpc/tanstack-react-query": "^11.9.0",
    "jose": "^6.1.3",
    "next": "^16.1.1",
    "next-intl": "^4.7.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.71.1",
    "sass": "^1.93.2",
    "superjson": "^2.2.6",
    "tech-stack-icons": "^3.3.2",
    "three": "^0.182.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.182.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "baseline-browser-mapping": "^2.9.11",
    "bun-types": "^1.3.7",
    "next-image-export-optimizer": "^1.20.1",
    "typescript": "^5",
    "unzipper": "^0.12.3"
  }
}
